// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id        String     @id
  email     String  @unique
  hash      String
  verified  Boolean @default(false)
  task      task[]
}

model task {
  id          String    @id
  title       String
  description String?
  type        Type
  status      Status    @default(INPROGRESS)
  start_date  DateTime?
  user        user      @relation(fields: [user_id], references: [id])
  user_id     String
}
enum Status {
  FINISHED
  CANCELED
  INPROGRESS
}

enum Type {
  inbox
  unplaced
}