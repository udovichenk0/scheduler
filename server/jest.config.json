{
  "moduleFileExtensions": ["ts", "js"],
  "testRegex": ".*\\.test\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "preset": "ts-jest",
  "clearMocks": true,
  "moduleNameMapper": {
    "src/(.*)$": "<rootDir>/src/$1"
  }
}
